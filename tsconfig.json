{
   "extends": "expo/tsconfig.base",
   "compilerOptions": {
      "strict": true,
      "allowArbitraryExtensions": true,
      "jsx": "react-native",
      "lib": ["dom", "ESNext"],
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
         "@screens": ["/src/screens"],
         "@components": ["/src/components"],
         "@utils": ["/src/utils"],
         "@context/*": ["/src/context/"],
         "@config/*": ["/src/config/"],
         "@assets/*": ["/assets/"]
      }
   }
}
